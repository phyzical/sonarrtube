{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "paths": {
      "*": ["*", ".ts", ".tsx"] // This line is optional and customizable
    },
    "sourceMap": true,
    "strict": true
  },
  "include": ["tests/**/*", "src/**/*"]
}
